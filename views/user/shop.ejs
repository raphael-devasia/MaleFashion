<script>
    let productsContainer;
    let paginationContainer;
    let productCountDisplay;

    document.addEventListener('DOMContentLoaded', () => {
        productsContainer = document.getElementById('products-container');
        paginationContainer = document.getElementById('pagination-container');
        productCountDisplay = document.querySelector('.shop__product__option__left p');

        const categoryRadios = document.querySelectorAll('.category-radio');

        categoryRadios.forEach((radio) => {
            radio.addEventListener('change', handleCategoryChange);
        });

        // Fetch initial products and pagination
         fetchProducts('', 1, 'price-asc');
    });

    function handleCategoryChange() {
        const selectedCategory = document.querySelector('input[name="category"]:checked')?.value;
        const page = 1; // Reset to first page when category changes
        const sortOption = document.getElementById('sort-options').value;
        // Change 3: Pass sortOption to fetchProducts
        fetchProducts(selectedCategory, page, sortOption);
    }

    function handlePaginationClick(page) {
        const selectedCategory = document.querySelector('input[name="category"]:checked')?.value;
       const sortOption = document.getElementById('sort-options').value;
        // Change 4: Pass sortOption to fetchProducts
        fetchProducts(selectedCategory, page, sortOption);
    }

    function fetchProducts(selectedCategory = '', page = 1, sort = 'price-asc') {
        const limit = 5;
        let queryString = `page=${page}&limit=${limit}&sort=${sort}`;

        if (selectedCategory) {
            queryString += `&key=${selectedCategory}`;
        }

        fetch(`/filtered-category?${queryString}`)
            .then((response) => response.json())
            .then((data) => {
                let templateHtml = '';

                data.data.forEach((row) => {
                    templateHtml += `
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item sale">
                                    <div class="product__item__pic set-bg" data-setbg="${setImageUrl(row)}">
                                        ${row.discountPercentage > 0 ? '<span class="label">Sale</span>' : ''}
                                        <ul class="product__hover">
                                            <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                                            <li><a href="#"><img src="img/icon/compare.png" alt=""><span>Compare</span></a></li>
                                            <li><a href="/products/${row._id}"><img src="img/icon/search.png" alt=""></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="product__item__text">
                                    <h6>${row._id}</h6>
                                    <a href="#" class="add-cart">+ Add To Cart</a>
                                    <div class="rating">
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                    ${row.discountPercentage > 0 ?
                            `<h6><s>${row.Original_price}</s>$</h6>
                                        <h5>$${row.effectivePrice}</h5>` :
                            `<h5>$${row.Original_price}</h5>`
                        }
                                    <div class="product__color__select">
                                        ${row.colours.map((color, index) => `
                                            <label class="active ${color.toLowerCase()}" for="pc-${index + 4}">
                                                <input type="radio" id="pc-${index + 4}">
                                            </label>
                                        `).join('')}
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });

                productsContainer.innerHTML = templateHtml;
                setBackgrounds();

                // Update pagination
                updatePagination(data.page, data.totalPages);
                productCountDisplay.innerHTML = `Showing ${data.start}–${data.end} of ${data.totalProducts} results`;
            });
    }
    function sortProducts() {
            const sortOption = document.getElementById('sort-options').value;
            const selectedCategory = document.querySelector('input[name="category"]:checked')?.value;
            const page = 1; // Reset to first page when sorting changes
            // Change 7: Pass sortOption to fetchProducts
            fetchProducts(selectedCategory, page, sortOption);
        }   

    function setImageUrl(row) {
        const imgPath = row.images[0][0].startsWith('/') ? row.images[0][0].substring(1) : row.images[0][0];
        const imgUrl = `${window.location.origin}/${imgPath}`;
        return imgUrl;
    }

    function setBackgrounds() {
        document.querySelectorAll('.set-bg').forEach(element => {
            const bg = element.getAttribute('data-setbg');
            element.style.backgroundImage = `url(${bg})`;
        });
    }

    function updatePagination(currentPage, totalPages) {
        let paginationHtml = '';

        if (currentPage > 1) {
            paginationHtml += `
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" onclick="handlePaginationClick(${currentPage - 1})" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            `;
        }

        for (let i = 1; i <= totalPages; i++) {
            paginationHtml += `
                <li class="page-item ${i === currentPage ? 'active' : ''}">
                    <a class="page-link" href="javascript:void(0)" onclick="handlePaginationClick(${i})">
                        ${i}
                    </a>
                </li>
            `;
        }

        if (currentPage < totalPages) {
            paginationHtml += `
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" onclick="handlePaginationClick(${currentPage + 1})" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            `;
        }

        paginationContainer.innerHTML = paginationHtml;
    }
</script>



