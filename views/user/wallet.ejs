                <div class="card-header align-items-center">
                    <h5 class="mb-0">Latest Transactions</h5>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="small text-uppercase bg-body text-muted">
                            <tr>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Debit/Credit</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(e=> { %>
                                <tr class="align-middle">
                                    <td>
                                        <%= e.createdAt.toLocaleDateString('en-US') %>
                                    </td>
                                    <td>
                                        <% if (e.Referral_Amount> 0) { %>
                                            <div class="d-flex align-items-center">
                                                <span><i class="fa fa-arrow-up" aria-hidden="true"></i></span>
                                                <span>₹<%= (e.Referral_Amount).toFixed(2) %></span>
                                            </div>
                                            <% } else { %>
                                                <div class="d-flex align-items-center">
                                                    <span><i class="fa fa-arrow-down" aria-hidden="true"></i></span>
                                                    <span>₹<%= (Math.abs(e.Referral_Amount)).toFixed(2) %></span>
                                                    <!-- Use Math.abs for cleaner negative display -->
                                                </div>
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if (e.Referral_Amount> 0) { %>
                                            <div class="d-flex align-items-center">
                                                <span class="text-info">Credit</span>
                                            </div>
                                            <% } else { %>
                                                <div class="d-flex align-items-center">
                                                    <span class="text-danger">Debit</span>
                                                </div>
                                                <% } %>
                                    </td>
                                    <td>
                                        <span class="badge fs-6 fw-normal bg-tint-success text-dark">
                                            <%= e.Status %>
                                        </span>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mt-3">
                        <% if (currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/user/wallet?page=<%= currentPage - 1 %>">Previous</a>
                            </li>
                            <% } %>
                                <% for (let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/user/wallet?page=<%= i %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>
                                        <% if (currentPage < totalPages) { %>
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="/user/wallet?page=<%= currentPage + 1 %>">Next</a>
                                            </li>
                                            <% } %>
                    </ul>
                </nav>
            </div>
