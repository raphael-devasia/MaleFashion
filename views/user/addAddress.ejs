     <script>
document.getElementById('profile-form').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent the default form submission

    // Get the form inputs
    const houseNumber = document.querySelector('input[name="houseNumber"]').value.trim();
    const addressLine1 = document.querySelector('input[name="addressLine1"]').value.trim();
    const postalCode = document.querySelector('input[name="postalCode"]').value.trim();
    const state = document.querySelector('input[name="state"]').value.trim();
    const country = document.querySelector('input[name="country"]').value.trim();

    // Validate the inputs
    let errorMessage = '';

    // Regular expressions for validation
    const alphanumericRegex = /^[a-zA-Z0-9\s]+$/;
    const postalCodeRegex = /^\d{5}(?:[-\s]\d{4})?$/; // US ZIP code format
    const lettersRegex = /^[a-zA-Z\s]+$/;

    if (!houseNumber || !alphanumericRegex.test(houseNumber)) {
        errorMessage += 'House Number is required and should be alphanumeric. ';
    }
    if (!addressLine1) {
        errorMessage += 'Address Line 1 is required. ';
    }
    if (!postalCode || !postalCodeRegex.test(postalCode)) {
        errorMessage += 'Valid Postal Code is required. ';
    }
    if (!state || !lettersRegex.test(state)) {
        errorMessage += 'State is required and should contain only letters. ';
    }
    if (!country || !lettersRegex.test(country)) {
        errorMessage += 'Country is required and should contain only letters. ';
    }

    // Show error message if validation fails
    if (errorMessage) {
        document.getElementById('error-message').textContent = errorMessage;
    } else {
        // Submit the form if validation is successful
        document.getElementById('error-message').textContent = '';
        const formData = new FormData(document.getElementById('profile-form'));
        fetch('/user/addnewaddress', {
            method: 'POST',
            body: formData
        })
        .then(response => {
            if (response.redirected) {
                window.location.href = response.url; // Redirect to the success or error page
            } else {
                return response.json().then(data => {
                    if (data.message) {
                        document.getElementById('error-message').textContent = data.message;
                    }
                });
            }
        })
        .catch(error => {
            document.getElementById('error-message').textContent = 'An error occurred. Please try again.';
        });
    }
});
</script>
